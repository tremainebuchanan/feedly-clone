<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
   
    <section class="container">
      <div style="margin-top: 24px;margin-bottom: 24px;">
        <h1>Latest News</h1>
      </div>
      <div  style="margin-bottom: 24px;">
        <a href="/jamaica-gleaner" style="color:#f40552;font-weight:bold;margin-right: 12px;">Jamaica Gleaner</a>
        <a href="/jamaica-observer" style="color:#f40552;font-weight:bold">Jamaica Observer</a>
      </div>
     
      <section class="articles">
        <% articles.forEach(function(article){ %>

          <a class="article" href="<%= article.link %>>" target="_blank">  
              <div class="article-content-image">
                <img src="/images/article.jpg">
              </div>
              <div class="article-text">
                <h2><%= article.title%></h2>
              <p><span class="muted-text"><%= article.source %></span></p>
              <p><%= article.blurb%> </p>
              </div>            
          </a>

        <% }); %>       
      </section>     
    </section>   
  </body>
</html>
